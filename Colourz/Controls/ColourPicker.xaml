<Window x:Class="Colourz.window.ColourPicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ColourPicker" Height="100" Width="160" ResizeMode="NoResize" WindowStyle="None" KeyDown="Window_KeyDown" Closed="Window_Closed" GotFocus="Window_GotFocus" LostFocus="Window_LostFocus">
    <Grid Margin="0,0,-0,0">
        <Rectangle x:Name="recBackboard" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="49" Stroke="White" VerticalAlignment="Top" Width="160" MouseDown="recBackboard_MouseDown"/>
        <Rectangle x:Name="recColour" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="51" Stroke="White" VerticalAlignment="Top" Width="160" Margin="0,49,0,0" MouseDown="recColour_MouseDown"/>
        <TextBlock x:Name="lblBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Height="49" Width="150" FontSize="16" Margin="5,0,0,0" MouseDown="TextBlock_MouseDown" KeyDown="lblBlock_KeyDown"><Run Language="en-gb" Text="F5 To Save Colour"/><LineBreak/><Run Language="en-gb" Text="F7 To Stop"/></TextBlock>

    </Grid>
</Window>
